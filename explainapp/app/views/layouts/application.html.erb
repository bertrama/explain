<!doctype html> 
<html lang="en"> 
    <head> 
        <meta charset="utf-8" /> 
 
        <title><%=t 'application.name' %></title>
 
        <link type="text/css" rel="stylesheet" href="/stylesheets/style.css">
        <script type="text/javascript" src="/javascripts/application.js"></script>

        <%= csrf_meta_tag %>
 
        <!--[if lt IE 9]>
        <script>
 
            /* html5 elements */
            var elements = ( "abbr,article,aside,audio,cavnas,datalist,"
                           + "details,figure,footer,header,hgroup,mark,"
                           + "menu,meter,output,progress,section,video,"
                           + "time,nav" ).split( ',' );
 
            for ( var i = 0 ; i < elements.length ; i++ ) {
                document.createElement( elements[ i ] );
            }
 
        </script>
        <![endif]--> 

        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push( [ '_setAccount', 'UA-17167098-3' ] );
            _gaq.push( [ '_trackPageview'               ] );

            ( function( ) {
                var ga = document.createElement( 'script' );
                    ga.type  = 'text/javascript';
                    ga.async = true;
                    ga.src   = ( 'https:' == document.location.protocol ? 'https://ssl' : 'http://www' ) + '.google-analytics.com/ga.js';
                    var s = document.getElementsByTagName( 'script' )[0];
                        s.parentNode.insertBefore( ga, s );
            } )();
        </script>

        <script type="text/javascript">
            $( document ).ready( function() {

                var w = parseInt( $( window ).width() );
                var c = 'wide';

                     if ( w < 1024 ) { c = 'thin';  }
                else if ( w < 1280 ) { c = 'medium' };

                $( 'body' ).addClass( c );

            } );
        </script>

    </head> 
    <body class="<%= @page %>"> 
 
        <!-- wrapper --> 
        <div id="wrapper"> 
 
            <header> 
                <hgroup> 
                    <h1> 
                      <span><strong><%=t 'application.hostname' %></strong>.<%=t 'application.domain' %> <sup><%=t 'application.version' %></sup></span> 
                    </h1> 
                    <h2><span><%=t 'application.motto' %></span></h2>
                </hgroup> 
            </header> 
            <%= render "layouts/menu" %>
            <%= render "layouts/notices" %>
            <%= yield %>
            <footer> 
                <div> 
                    <p class="copyright">Copyright &copy; 2012 <a href="mailto:blog@solr.pl" title="mail us">Solr.pl Team</a> (visit us at <a href="http://solr.pl" target="_blank">solr.pl</a>)</p>
                    <p class="powered-by">An idea and layout borrowed from <a href="http://explain.depesz.com" target="_blank">explain.depesz.com</a></p>
                </div> 
            </footer> 
 
        </div> 
        <!-- /wrapper --> 
    </body> 
</html> 
